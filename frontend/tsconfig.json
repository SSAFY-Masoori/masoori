{
  "compilerOptions": {
    "baseUrl": ".", // 경로 시작 위치를 현재 위치로 설정
      "paths": {
        "@/*": ["src/*"] // @/로 시작하는 경로를 src/ 경로로 설정
      },
    "target": "es5", // 컴파일된 코드의 대상 JavaScript 버전을 es5로 설정합니다.
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ], // 사용 가능한 라이브러리와 환경을 지정합니다.
    "allowJs": true, // JavaScript 파일도 컴파일을 허용합니다.
    "skipLibCheck": true, // 라이브러리 검사를 건너뜁니다.
    "esModuleInterop": true, // CommonJS 및 ES 모듈 간의 상호 운용성을 허용합니다.
    "allowSyntheticDefaultImports": true, // 모듈에서 기본 내보내기를 합성할 수 있도록 허용합니다.
    "strict": true, // 엄격한 타입 체크를 활성화합니다.
    "forceConsistentCasingInFileNames": true, // 파일 이름의 일관된 대소문자 사용을 강제합니다.
    "noFallthroughCasesInSwitch": true, // switch 문에서의 case 누락을 방지합니다.
    "module": "esnext", // 모듈 시스템을 ES 모듈로 설정합니다.
    "moduleResolution": "node", // 모듈 해결 방법을 Node.js 스타일로 설정합니다.
    "resolveJsonModule": true, // .json 파일을 모듈처럼 가져올 수 있도록 합니다.
    "isolatedModules": true, // 각 파일을 독립된 모듈로 처리하여 분리된 컨텍스트에서 실행합니다.
    "noEmit": true, // 실제로 출력 파일을 생성하지 않도록 설정합니다.
    "jsx": "react-jsx" // JSX 문법을 react-jsx로 사용합니다.
  }
}